{
  "name": "@eldrin-project/eldrin-app-react",
  "version": "0.0.2",
  "description": "React adapter for Eldrin apps providing single-spa lifecycle and database hooks",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "eldrin",
    "react",
    "single-spa",
    "microfrontend"
  ],
  "author": "Eldrin Team",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "single-spa-react": "^6.0.0 || ^7.0.0"
  },
  "peerDependenciesMeta": {
    "single-spa-react": {
      "optional": true
    }
  },
  "dependencies": {
    "@eldrin-project/eldrin-app-core": "^0.0.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251216.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "single-spa-react": "^6.0.2",
    "tsup": "^8.0.0",
    "typescript": "^5.8.0",
    "typescript-eslint": "^8.50.1",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
